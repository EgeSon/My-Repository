correct_key = "anahtar"

attempts = 3

while attempts > 0:
    user_input = input("Kilitli! Anahtarı girin: ")
    
    if user_input == correct_key:
        print("Tebrikler! Kilit açıldı.")
        break
    else:
        attempts -= 1
        if attempts > 0:
            print(f"Yanlış anahtar. Kalan hakkınız: {attempts}")
        else:
            print("Maalesef, kilit açılmadı. Haklarınız tükendi.")
